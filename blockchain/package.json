{
  "name": "federated-learning-blockchain",
  "version": "1.0.0",
  "description": "Smart contracts for decentralized federated learning platform",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "npx hardhat run scripts/deploy.js --network testnet",
    "deploy:mainnet": "npx hardhat run scripts/deploy.js --network mainnet",
    "clean": "npx hardhat clean",
    "coverage": "npx hardhat coverage",
    "gas-reporter": "REPORT_GAS=true npx hardhat test",
    "lint": "npx eslint '**/*.js' && npx solhint 'contracts/**/*.sol'",
    "lint:fix": "npx eslint '**/*.js' --fix && npx solhint 'contracts/**/*.sol' --fix",
    "format": "npx prettier --write '**/*.{js,sol,json,md}'"
  },
  "author": "Aymen Zouari <bgs9qc@virginia.edu>",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@openzeppelin/contracts": "^4.8.3",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.14.0",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2"
  },
  "dependencies": {
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts-upgradeable": "^4.8.3",
    "@truffle/hdwallet-provider": "^2.1.10"
  }
}
