# Environment Configuration Template
# Make a copy of this file named '.env' and fill in your values

# General settings
ENVIRONMENT=development  # development, testnet, production

# Database
DATABASE_URL=postgresql://fedlearn:fedlearnpassword@postgres:5432/fedlearn
POSTGRES_USER=fedlearn
POSTGRES_PASSWORD=fedlearnpassword
POSTGRES_DB=fedlearn

# Redis
REDIS_URL=redis://redis:6379/0

# Blockchain
BLOCKCHAIN_URL=http://blockchain:8545
CHAIN_ID=1337

# Authentication
JWT_SECRET=your-long-and-very-secure-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# Ethereum accounts
# Generate new secure private keys for production environments
DEPLOYER_PRIVATE_KEY=0x4f3edf983ac636a65a842ce7c78d9aa706d3b113bce9c46f30d7d21715b23b1d
API_SERVER_PRIVATE_KEY=0x6cbed15c793ce57650b9877cf6fa156fbef513c4e6134f022a85b1ffdd59b2a1
AGGREGATOR_PRIVATE_KEY=0x646f1ce2fdad0e6deeeb5c7e8e5543bdde65e86029e2fd9fc169899c440a7913

# Testnet/Mainnet settings (for production)
TESTNET_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key
